<div class='devise'>
  <h2>EDIT PROFILE</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class='devise_messages'><%= devise_error_messages! %></div>

    <div class="field">
      <%= f.label :username, "USERNAME:" %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :email, "EMAIL:" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, "NEW PASSWORD (OPTIONAL):" %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "NEW PASSWORD CONFIRMATION:" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :age, 'AGE:' %><br />
      <%= f.text_field :age, autofocus: true, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :gender, 'GENDER ("M" OR "F"):' %><br />
      <%= f.text_field :gender, autofocus: true, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :height, "HEIGHT IN INCHES:" %><br />
      <%= f.text_field :height, autofocus: true, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :weight, "WEIGHT IN POUNDS:" %><br />
      <%= f.text_field :weight, autofocus: true, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :reach, "REACH IN INCHES:" %><br />
      <%= f.text_field :reach, autofocus: true, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password, "CURRENT PASSWORD:" %><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class='actions center'>
      <%= f.submit 'UPDATE PROFILE' %>
    </div>
  <% end %>

  <%= link_to registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete do %>
    <div class='button_link'>CANCEL MY ACCOUNT</div>
  <%- end -%>
  <%= link_to root_path do %>
    <div class='button_link'>SPARRING MEETUP HOME</div>
  <%- end -%>
  <%= link_to destroy_user_session_path, method: :delete do %>
    <div class='button_link'>SIGN OUT</div>
  <%- end -%>
</div>
